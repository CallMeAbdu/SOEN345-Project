<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/homeContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <Button
            android:id="@+id/homeSignOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/auth_action_sign_out" />

        <TextView
            android:id="@+id/homeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/home_title"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/homeUserEmailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/auth_signed_in_as_default"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/homeRoleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/home_role_default"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/homeAdminSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/homeAdminEventsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_admin_event_controls"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/homeAddEventButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/home_add_event_action" />

            <TextView
                android:id="@+id/homeEventsEmptyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/home_events_empty"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/homeEventsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
